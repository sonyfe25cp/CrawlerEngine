<?xml version="1.0" encoding="UTF-8"?>

<crawl-task>
	<task-name>sina-society</task-name>
	<base-dir>crawled-pages</base-dir>
	<max-threads>20</max-threads>
	<max-depth>5</max-depth>
	<encoding>GB18030</encoding>
	<initial-urls>
		<url>http://news.sina.com.cn/society/</url>
	</initial-urls>
	<site-configs>
	</site-configs>
	<filter-rules>
		<rule action="STORE">http://news.sina.com.cn/s/(p/)?[0-9\-]+/([0-9a-zA-Z]+).shtml</rule>
		<rule action="FOLLOW">http://roll.news.sina.com.cn/.*</rule>
		<rule action="FOLLOW">http://news.sina.com.cn/society/</rule>
		<rule action="AVOID">.*</rule>
	</filter-rules>
	<page-extractors>
		<page-extractor>
			<url-pattern>http://news.sina.com.cn/s/(p/)?[0-9\-]+/([0-9a-zA-Z]+).shtml</url-pattern>
			<rules>
				<rule name="title"><![CDATA[<h1 id="artibodyTitle".*?>(.+?)</h1>]]></rule>
				<rule name="body" html-cleanup="true"><![CDATA[<!-- publish_helper name='原始正文' .*? -->(.+?)<!-- publish_helper_end -->]]></rule>
				<rule name="publictime"><![CDATA[<span id="pub_date">(.+?)</span>]]></rule>
				<rule name="keywords"><![CDATA[<meta name=keywords content="(.+?)">]]></rule>
				<rule name="description"><![CDATA[<meta name=description content="(.+?)">]]></rule>
			</rules>
		</page-extractor>
	</page-extractors>
</crawl-task>