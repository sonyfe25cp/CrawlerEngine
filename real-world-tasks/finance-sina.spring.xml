<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="pageSaver" class="bit.crawl.pagesavers.PageStorePageSaver"
		destroy-method="close">
		<property name="taskName" value="finance-sina" />
		<property name="baseDir" value="crawled-pages" />
	</bean>

	<bean id="crawler" class="bit.crawl.crawler.Crawler">
		<property name="maxThreads" value="20" />
		<property name="maxDepth" value="5" />
		<property name="encoding" value="UTF-8" />
		<property name="initialUrls">
			<list>
                          <!-- 国内财经 -->
                          <value>http://finance.sina.com.cn/china/index.shtml</value>
                          <!-- 国际财经 -->
                          <value>http://finance.sina.com.cn/world/index.shtml</value>
                          <!-- 产经 -->
                          <value>http://finance.sina.com.cn/chanjing/index.shtml</value>
			</list>
		</property>
		
		<property name="filterRules">
			<list>
                          <!-- 金融新闻 -->
                          <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/china/jrxw/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 宏观经济 -->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/china/hgjj/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 国内财经分类 (hgjj,jrxw)-->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://roll.finance.sina.com.cn/finance/gncj/(hgjj|jrxw)/index[_0-9]*.shtml"
					p:action="FOLLOW" />


                          <!-- 亚洲经济 -->
                          <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/world/yzjj/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 欧洲经济-->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/world/ozjj/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 美洲经济-->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/world/mzjj/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 国际财经分类 (yzjj,ozjj,mzjj)-->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://roll.finance.sina.com.cn/finance/gjcj/(yzjj|ozjj|mzjj)/index[_0-9]*.shtml"
					p:action="FOLLOW" />


                          <!-- 产经_产业新闻 -->
                          <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/chanjing/cyxw/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 产经_人事变动 -->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/chanjing/rsbd/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 产经_公司新闻 -->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/chanjing/gsnews/[0-9]+/[0-9]+.shtml"
					p:action="STORE" />
                                      <!-- 产经分类 (cyxw,rsbd,gsnews)-->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://roll.finance.sina.com.cn/finance/cj4/(cj_cyxw|rsbd|cj_gsxw)/index[_1-9]*.shtml"
					p:action="FOLLOW" />



                                      <!-- 总分类 -->
                                      <bean class="bit.crawl.crawler.FilterRule" p:pattern="http://finance.sina.com.cn/(china|world|chanjing)/index.shtml"
					p:action="FOLLOW" />
				<bean class="bit.crawl.crawler.FilterRule" p:pattern=".*"
					p:action="AVOID" />
			</list>
		</property>

		<property name="pageListeners">
			<list>
				<ref bean="pageSaver" />
			</list>
		</property>
		<!-- new -->
		<property name="crawlHistory">
			<ref bean="crawlHistory" />
		</property>
	</bean>
	<!-- mysql database -->
	<bean id="dataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
		<property name="serverName" value="127.0.0.1" />
		<property name="user" value="root" />
		<property name="password" value="123iop" />
		<property name="databaseName" value="crawlhistory" />
	</bean>
	<!-- new -->
	<bean id="crawlHistory" class="bit.crawl.crawler.CrawlHistory">
		<property name="dataSource" ref="dataSource" />
		<property name="tableName" value="financesina" />
		<property name="bufferSize" value="100" />
	</bean>
</beans>

