<?xml version="1.0" encoding="UTF-8"?>

<crawl-task>
	<task-name>bitHome</task-name>
	<base-dir>crawled-pages</base-dir>
	<max-threads>20</max-threads>
	<max-depth>3</max-depth>
	<encoding>UTF-8</encoding>
	<initial-urls>
		<url>http://www.bit.edu.cn/</url>
	</initial-urls>
	<site-configs>
		<site-config>
			<host>www.bit.edu.cn</host>
			<fetch-delay>0</fetch-delay>
		</site-config>
	</site-configs>
	<filter-rules>
		<rule action="STORE">http://www.bit.edu.cn/xww/zhxw/[0-9]+.htm</rule>
		<rule action="STORE">http://www.bit.edu.cn/xww/xwtt/[0-9]+.htm</rule>
		<rule action="STORE">http://www.bit.edu.cn/xww/zhxw/[0-9]+.htm</rule>
		<rule action="STORE">http://www.bit.edu.cn/xww/jxky1/[0-9]+.htm</rule>
		<rule action="STORE">http://www.bit.edu.cn/xww/xsjl1/[0-9]+.htm</rule>
		<rule action="FOLLOW">http://www.bit.edu.cn/xww/.*</rule>
		<rule action="FOLLOW">http://www.bit.edu.cn/</rule>
		<rule action="AVOID">.*</rule>
	</filter-rules>
	<page-extractors>
		<page-extractor>
			<url-pattern>http://www.bit.edu.cn/xww/zhxw/[0-9]+.htm</url-pattern>
			<rules>
				<rule name="title"><![CDATA[<DIV class=title>(.+?)</DIV>]]></rule>
			</rules>
		</page-extractor>
	</page-extractors>
</crawl-task>