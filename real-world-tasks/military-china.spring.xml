	<bean id="pageSaver" class="bit.crawl.pagesavers.FileSystemPageSaver">
		<property name="baseDir" value="military-china" />
	</bean>

	<bean id="crawler" class="bit.crawl.crawler.Crawler">
		<property name="maxThreads" value="20" />
		<property name="maxDepth" value="5" />
		<property name="encoding" value="GB18030" />
		<property name="initialUrls">
			<list>
                                <value>http://military.china.com/news/</value>
                                <value>http://military.china.com/news2/</value>
			</list>
		</property>
		<property name="filterRules">
			<list>
					<!-- p:pattern="http://news.sina.com.cn/s/(p/)?[0-9\-]+/([0-9a-zA-Z]+).shtml" -->
				<bean class="bit.crawl.crawler.FilterRule"
					p:pattern="http://military.china.com/(news|news2)/[0-9]{3}/[0-9]{8}/[0-9]+.html"
					p:action="STORE" />
				<bean class="bit.crawl.crawler.FilterRule"
					p:pattern="http://military.china.com/news/"
					p:action="FOLLOW" />
				<bean class="bit.crawl.crawler.FilterRule"
					p:pattern="http://military.china.com/news2/"
					p:action="FOLLOW" />
				<bean class="bit.crawl.crawler.FilterRule"
					p:pattern=".*"
					p:action="AVOID" />
			</list>
		</property>

		<property name="pageListeners">
			<list>
				<ref bean="pageSaver" />
			</list>
		</property>
	</bean>
	
